<Application
    x:Class="PresentationLayer.GUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PresentationLayer.GUI"
    StartupUri="Views/MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\NamedStyles\NamedStyles.xaml" />
                <ResourceDictionary Source="Resources\Images\Images.xaml" />
                <ResourceDictionary Source="Resources\ImageBrushes\ImageBrushes.xaml" />
                <ResourceDictionary Source="Resources\Brushes\Brushes.xaml" />
                <ResourceDictionary Source="Resources\Fonts\Fonts.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
